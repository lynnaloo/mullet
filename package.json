{
  "name": "mullet",
  "version": "0.0.18",
  "description": "Mullet Stack: Facebook in the front. Walmart in the back. (React.js/Hapi)",
  "main": "walmart.js",
  "scripts": {
    "browserify": "browserify src/react_components/main.js > public/js/app.built.js && browserify src/react_components/serverside/client.js > public/js/isomorph-app.built.js",
    "test": "jest",
    "lint": "eslint src/react_components/main.js",
    "watch": "npm-watch",
    "start": "node walmart.js",
    "postinstall": "mkdir -p public/js && cp node_modules/bootstrap/dist/js/bootstrap.min.js node_modules/jquery/dist/jquery.min.* public/js && cp node_modules/bootstrap/dist/css/bootstrap*.min.css public/css && npm run browserify"
  },
  "engines": {
    "node": "^0.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lynnaloo/mullet.git"
  },
  "keywords": [
    "react",
    "hapi",
    "node",
    "Facebook",
    "Walmart"
  ],
  "author": "Linda Nichols",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lynnaloo/mullet/issues"
  },
  "homepage": "http://www.mullet.io",
  "dependencies": {
    "babel": "^5.8.23",
    "babel-jest": "^5.3.0",
    "babelify": "^6.3.0",
    "body-parser": "^1.14.1",
    "bootstrap": "^3.3.5",
    "browserify": "^11.2.0",
    "hapi": "^9.3.1",
    "hapi-react-views": "^3.1.3",
    "inert": "^3.1.0",
    "jquery": "^2.1.4",
    "npm-watch": "^0.0.1",
    "react": "^0.13.3",
    "vision": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^1.6.0",
    "eslint-plugin-react": "^3.5.1",
    "jest-cli": "^0.4.19"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "react"
    ],
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "watch": {
    "browserify": "src/react_components/**/*.js"
  }
}
